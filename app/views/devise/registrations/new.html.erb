<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class='header'>
    <div class='top-content-one'>
      <%= link_to root_path do %>
        <img src="https://img.icons8.com/ios/50/ffffff/circled-left-2.png"/>
      <% end %>
      <h1>REGISTER</h1>
      <%= f.submit "Sign up", class:'form-header-btn'%>
    </div>
  </div>
  <div class='form'>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Name", class:"field" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"field" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"New Password (6 characters minimum)", class:"field" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", class:"field" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
